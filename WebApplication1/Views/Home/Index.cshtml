
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <fieldset>
        <legend>File Upload</legend>
        @using (Html.BeginForm("submit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label>File</label>
                <input type="file" class="form-control" name="file" />
                <span class="help-block">The File to be processed</span>
            </div>
            <input type="submit" class="btn btn-default" value="Upload Image" name="submit" />
        } 

    </fieldset>

    @if (ViewBag.Result)
    {
        <fieldset>
            <legend>Results Obtained:</legend>
            <div class="form-group">
                <label>Mean Confidence</label>
                <label>@ViewBag.mean</label>
            </div>
            <div class="form-group">
                <label>Result</label>
                <textarea class="form-control" readonly rows="10">@ViewBag.res</textarea>
            </div>
        </fieldset>
    }

</div>

